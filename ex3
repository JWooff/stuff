function triangle(size) {
    let triangle = "";
    
    for (let i = 1; i <= size; i++) {
        let space = ' '.repeat(size - i);
        let line = '#' .repeat(2 * i - 1);
        console.log(space + line)


    }
    for (let i = size - 1; i >= 1; i--) {

       let space = ' '.repeat(size - i);
        let line = '#' .repeat(2 * i - 1);
        console.log(space + line)

    }
}
triangle(8)
